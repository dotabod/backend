{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node16",
    "sourceMap": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "incremental": true
  },
  "ts-node": {
    "esm": true,
    "files": false,
    "transpileOnly": true,
    "typeCheck": false,
    "require": [
      "tsconfig-paths/register"
    ],
    "ignore": [
      "(?:^|/)node_modules/"
    ]
  }
}
