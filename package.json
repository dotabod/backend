{
  "name": "dotabod",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "bun upgrade-interactive --latest",
    "lint": "bun run eslint -- . && bun prettier -- . && echo 'Linting complete.'",
    "prettier": "prettier --write",
    "eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
    "nps": "doppler run -- bash services/mongodb/updatenps.sh",
    "exportnps": "doppler run -- bash services/mongodb/export.sh",
    "just": "doppler run -- bash runner.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@faker-js/faker": "^8.1.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^9.3.3",
    "@types/body-parser": "^1.19.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/lodash.isequal": "^4.5.6",
    "@types/memoizee": "^0.4.8",
    "@types/newrelic": "^9.14.0",
    "@types/retry": "^0.12.2",
    "@types/steam": "^0.0.29",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "dota2": "https://github.com/dotabod/node-dota2",
    "eslint": "^8.48.0",
    "steam": "https://github.com/dotabod/node-steam",
    "steam-errors": "^1.0.0",
    "@dotabod/settings": "^1.0.0",
    "@node-steam/id": "^1.2.0",
    "@types/long": "^5.0.0",
    "@types/lru-cache": "^7.10.10",
    "axios": "1.2.0-alpha.1",
    "axios-retry": "^3.3.1",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "country-code-emoji": "^2.3.0",
    "dotaconstants": "^7.18.0",
    "lodash.isequal": "^4.5.0",
    "lru-cache": "^10.0.1",
    "mongodb": "^6.1.0",
    "newrelic": "^11.1.0",
    "redis": "^4.6.9",
    "retry": "^0.13.1",
    "express": "^4.18.2",
    "socket.io-client": "^4.7.2",
    "@supabase/supabase-js": "^2.34.0",
    "@twurple/api": "6.0.9",
    "@twurple/auth": "6.0.9",
    "@twurple/chat": "6.0.9",
    "@twurple/eventsub-base": "6.0.9",
    "@twurple/eventsub-http": "6.0.9",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.2.0",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md)": [
      "bun run prettier"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "bun run eslint"
    ]
  },
  "packageManager": "bun@1.0.2"
}
