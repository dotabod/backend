{
  "name": "dotabod-backend",
  "description": "By leveraging insights from the Dota 2 official API, Dotabod will know exactly when to hide sensitive streamer information or engage with your Twitch audience.",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "author": "Geczy",
  "main": "src/index.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon src/index.ts",
    "pull": "git pull && systemctl restart nodeapp",
    "log": "journalctl -xefu nodeapp",
    "postinstall": "prisma generate",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@twurple/api": "^5.2.7",
    "@twurple/auth": "^5.2.7",
    "@twurple/chat": "^5.2.7",
    "@twurple/eventsub": "^5.2.7",
    "axios": "1.2.0-alpha.1",
    "axios-retry": "^3.3.1",
    "body-parser": "^1.20.1",
    "dotaconstants": "https://github.com/odota/dotaconstants",
    "express": "^4.18.2",
    "memoizee": "^0.4.15",
    "socket.io": "^4.5.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.6.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3"
  }
}
