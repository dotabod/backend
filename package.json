{
  "name": "dotabod",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cache:clean": "rm -rf $(echo bun pm cache) && rm -rf node_modules && rm bun.lockb",
    "up": "bun upgrade-interactive --latest",
    "lint": "bun run eslint -- . && bun prettier -- . && echo 'Linting complete.'",
    "prettier": "prettier --write",
    "eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
    "nps": "doppler run -- bash services/mongodb/updatenps.sh",
    "exportnps": "doppler run -- bash services/mongodb/export.sh",
    "just": "doppler run -- bash runner.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@twurple/api": "6.0.9",
    "@twurple/auth": "6.0.9",
    "@twurple/chat": "6.0.9",
    "@twurple/eventsub-base": "6.0.9",
    "@twurple/eventsub-http": "6.0.9",
    "retry": "^0.13.1"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/long": "^5.0.0",
    "@types/memoizee": "^0.4.8",
    "@types/newrelic": "^9.14.0",
    "@types/node": "^20.5.7",
    "tsconfig-paths": "^4.2.0",
    "@types/retry": "^0.12.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "@types/steam": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "trustedDependencies": [
    "steam-resources"
  ],
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md)": [
      "bun run prettier"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "bun run eslint"
    ]
  },
  "packageManager": "bun@1.0.2"
}
