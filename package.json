{
  "name": "dotabod",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "cache:clean": "rm -rf $(echo bun pm cache) && rm -rf node_modules && rm bun.lockb || true",
    "up": "bun upgrade-interactive --latest",
    "nps": "doppler run -- bash services/mongodb/updatenps.sh",
    "exportnps": "doppler run -- bash services/mongodb/export.sh",
    "just": "doppler run -- bash runner.sh",
    "just-prod": "DOPPLER_CONFIG=prd doppler run -- bash runner.sh",
    "build": "bun run --cwd packages/profanity-filter build && bun run build:all",
    "build:all": "bun run --cwd packages/dota build"
  },
  "trustedDependencies": ["@biomejs/biome", "es5-ext", "esbuild", "steam-fork", "steam-resources-fork"],
  "dependencies": {
    "@supabase/supabase-js": "^2.47.10",
    "@twurple/api": "7.2.1",
    "@twurple/auth": "7.2.1",
    "@twurple/eventsub-base": "^7.2.1",
    "i18next": "^24.2.0",
    "i18next-fs-backend": "^2.6.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --files-ignore-unknown=true"]
  }
}
