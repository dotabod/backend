{
  "name": "dotabod",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "bun upgrade-interactive --latest",
    "lint": "bun run eslint -- . && bun prettier -- . && echo 'Linting complete.'",
    "prettier": "prettier --write",
    "eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
    "nps": "doppler run -- bash services/mongodb/updatenps.sh",
    "exportnps": "doppler run -- bash services/mongodb/export.sh",
    "just": "doppler run -- bash runner.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-gyp": "^9.4.0",
    "socket.io-client": "^4.7.2",
    "@supabase/supabase-js": "^2.34.0",
    "@twurple/api": "6.0.9",
    "@twurple/auth": "6.0.9",
    "@twurple/chat": "6.0.9",
    "@twurple/eventsub-base": "6.0.9",
    "@twurple/eventsub-http": "6.0.9",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.2.0",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md)": [
      "bun run prettier"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "bun run eslint"
    ]
  },
  "packageManager": "bun@1.0.2"
}
