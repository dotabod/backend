{
  "name": "@dotabod/shared-utils",
  "version": "1.0.0",
  "description": "Shared utilities for Dotabod packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun build ./src/index.ts --outdir ./dist --target node --watch",
    "clean": "rm -rf dist",
    "lint": "bun biome check ./src",
    "test": "bun test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.21.0",
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "@twurple/chat": "^7.2.1",
    "dotenv": "^16.0.3",
    "i18next": "^22.5.1",
    "winston": "^3.17.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2",
    "@types/bun": "latest"
  },
  "private": true
}
