{
  "name": "@dotabod/twitch-events",
  "description": "We forward twitch events to dotabod.",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "author": "Geczy",
  "main": "src/index.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "docker:production": "bun ./dist/index.js",
    "docker:development": "bun --watch src/index.ts",
    "build": "bun build ./src/index.ts --target=bun --outfile=./dist/index.js",
    "subscription-health-check": "bun src/utils/subscriptionHealthCheck.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dotabod/shared-utils": "workspace:*",
    "express": "^4.21.2",
    "express-body-parser-error-handler": "^1.0.7",
    "i18next": "^24.2.0",
    "i18next-fs-backend": "^2.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "lint-staged": "^15.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8"
  }
}
