# Using a more specific version to ensure reproducibility
FROM node:20-alpine3.17 as base

# Add Git, Python3, make, g++ in a single RUN command
RUN apk add git python3 make g++

# Set build context and work directories
WORKDIR /app

# Copy just the relevant package.json and yarn.lock files
COPY package.json .yarnrc.yml yarn.lock ./
COPY .yarn/releases/ ./.yarn/releases/
COPY .yarn/cache/ ./.yarn/cache/
COPY ./packages/twitch/chat/package.json ./packages/twitch/chat/

# Install dependencies
RUN yarn install

#-------------------------

FROM base as builder

# Copy source code and build configurations
COPY tsconfig.json ./
COPY ./packages/twitch/chat/tsconfig.json ./packages/twitch/chat/
COPY ./packages/twitch/chat/src ./packages/twitch/chat/src/
COPY ./packages/twitch/chat/locales ./packages/twitch/chat/locales/

WORKDIR /app/
RUN yarn buildtc

#-------------------------

FROM node:20-alpine3.17 as prod

# Meta-data and labels
LABEL org.opencontainers.image.source="https://github.com/dotabod/backend" \
    org.opencontainers.image.description="Dotabod container: ./packages/twitch/chat" \
    org.opencontainers.image.licenses="AGPL-3.0"

# Create unprivileged user and switch to it
RUN adduser -D dotadockeruser
USER dotadockeruser

# Copy relevant build artifacts
WORKDIR /app
COPY --from=builder --chown=dotadockeruser /app/package.json /app/tsconfig.json ./
COPY --from=builder --chown=dotadockeruser /app/./packages/twitch/chat/package.json ./packages/twitch/chat/
COPY --from=builder --chown=dotadockeruser /app/./packages/twitch/chat/dist ./packages/twitch/chat/dist/
COPY --from=builder --chown=dotadockeruser /app/./packages/twitch/chat/locales ./packages/twitch/chat/locales/

# Copy node_modules
COPY --from=builder --chown=dotadockeruser /app/node_modules ./node_modules

# Environment and CMD
CMD yarn workspace @dotabod/twitch-chat run docker:production
