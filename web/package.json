{
  "name": "dotabod-backend",
  "description": "By leveraging insights from the Dota 2 official API, Dotabod will know exactly when to hide sensitive streamer information or engage with your Twitch audience.",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "author": "Geczy",
  "main": "src/index.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "studio": "dotenv -e ../.env.local -- yarn prisma studio --schema ./prisma/postgres.prisma",
    "start": "node -r newrelic --trace-warnings ./src/index.js",
    "build": "tsc",
    "debug": "nodemon -L --ext ts --exec \"node --inspect=0.0.0.0:9229 -r ts-node/register --loader ts-node/esm src/index.ts\"",
    "test": "ts-node --project ./tsconfig.json -r ts-node/register -r dotenv/config src/test.ts dotenv_config_path=../.env.local",
    "dev": "nodemon -L --ext ts ./src/index.ts",
    "devm1": "dotenv -e ../.env.local -- nodemon -L --ext ts ./src/index.ts",
    "postinstall": "prisma generate --schema ./prisma/mongo.prisma && prisma generate --schema ./prisma/postgres.prisma",
    "lint": "eslint --ext .ts ./src",
    "prettier": "prettier --ext .ts ./src --write",
    "lint:fix": "yarn lint -- --fix",
    "update-np": "dotenv -e ../.env.local -- bash ../mongodb/updatenps.sh",
    "pullmongo": "dotenv -e ../.env.local -- prisma db pull --schema ./prisma/mongo.prisma --force",
    "pullpsql": "dotenv -e ../.env.local -- prisma db pull --schema ./prisma/postgres.prisma"
  },
  "dependencies": {
    "@node-steam/id": "^1.2.0",
    "@prisma/client": "4.8.0",
    "@supabase/supabase-js": "^2.2.1",
    "@twurple/api": "^5.2.7",
    "@twurple/auth": "^5.2.7",
    "@twurple/chat": "^5.2.7",
    "@twurple/eventsub": "^5.2.7",
    "@types/long": "^5.0.0",
    "axios": "1.2.0-alpha.1",
    "axios-retry": "^3.3.1",
    "body-parser": "^1.20.1",
    "country-code-emoji": "^2.3.0",
    "dota2": "https://github.com/dotabod/node-dota2.git",
    "express": "^4.18.2",
    "long": "5.0.1",
    "mongodb": "^4.12.1",
    "newrelic": "^9.7.4",
    "retry": "^0.13.1",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "steam": "https://github.com/dotabod/node-steam",
    "steam-errors": "^1.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@types/memoizee": "^0.4.8",
    "@types/newrelic": "^9.4.0",
    "@types/node": "^18.11.17",
    "@types/retry": "^0.12.2",
    "@types/steam": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "prisma": "^4.8.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  }
}
